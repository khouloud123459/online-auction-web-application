    <main>
        <div class="bidding-room">

            <!-- Item Details -->

           
            <div class="item-details">
                <h2><%= item.productName %></h2>
              
                <img src="<%= item.image.replace(/^public/, '') %>" alt="<%= item.productName %>"  style="max-width: 100%;">
              
            </div>
        
            <!-- Bidding Information -->
            <div class="bid-info">
                <table style="border-collapse: collapse; width: 100%; height: 100%; ">
                    <tr>
                        <th colspan="2"><h2>Product Details:</h2></th>
                    </tr>
                    <tr>
                        <th style="border: 1px solid #ddd;">Current Bid:</th>
                        <td style="border: 1px solid #ddd;"><%= item.currentPrice %></td>
                    </tr>
                    <tr>
                        <th style="border: 1px solid #ddd;">Seller Reserve:</th>
                        <td style="border: 1px solid #ddd;"><%= item.basePrice %></td>
                    </tr>
                    <tr>
                        <th style="border: 1px solid #ddd;">Category</th>
                        <td style="border: 1px solid #ddd;"><%= item.category %></td>
                    </tr>
                    <tr>
                        <th style="border: 1px solid #ddd;">Description</th>
                        <td style="border: 1px solid #ddd;"><%= item.description %></td>
                    </tr>
                   
                    <tr>
                        <th style="border: 1px solid #ddd;">Highlights:</th>
                        <td style="border: 1px solid #ddd;"><%= item.highlights %></td>
                    </tr>
                    <!-- Add more details as needed -->
                </table>
            </div>
        <div class="bid-form">
            <!-- Bid Form -->
            <form action="/room/auction/<%= item.id %>" method="post">
                <div>
                  <button class="send" type="submit">Start Auction</button>
                </div>
              </form>
              
              <form action="/room/product/<%= item.id %>" method="post">
                <div>
                  <button class="send" type="submit">Delete Product</button>
                </div>
              </form>
              
              <form action="/room/bids/<%= item.id %>" method="get">
                <div>
                  <button class="send" type="submit">List Bids</button>
                </div>
              </form>
         </div>     
              

    </div>
</div></div>
              

           
        
          
